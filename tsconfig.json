{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist/commonjs",

    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./spec/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "downloads",
  ]
}
