{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node",
    "target": "ES6",
    "outDir": "./dist/commonjs",

    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "esModuleInterop": true
  },
  "include": [
    "./src/typescript/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
